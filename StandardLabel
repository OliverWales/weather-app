import javax.swing.*;
import java.awt.*;

import static java.awt.Font.BOLD;

public class SJLabel extends JLabel {
    Font font;
    public SJLabel(){
        super();
        font = new Font("Hiragino Sans GB", BOLD,20);
        setFont(font);
    }
    public void setTextSize(int size){
        font = new Font(font.getFontName(), BOLD, size);

    }
}
